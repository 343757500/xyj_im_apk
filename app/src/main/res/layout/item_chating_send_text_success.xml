<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_container"
        android:layout_marginTop="8dp"
        android:text="2018年12月12日"
        android:textColor="#969494"
        android:textSize="12sp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/iv_user_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/user_login"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="睡觉了吗?没睡的话出去撸串,我请客"
            android:layout_toLeftOf="@id/iv_user_send"
            android:background="@mipmap/rectangle_1"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>




</LinearLayout>