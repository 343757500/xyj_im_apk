<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#39373C"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="#fff"
            android:textSize="18sp"
            android:paddingTop="10dp" />

    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0EFF5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_myinfo"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical">

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="29dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/user_login"
                    app:riv_corner_radius="30dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吃鸡大神"
                        android:textColor="#333"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="账号:   cjds-001"
                        android:textColor="#999"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/new_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_update_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="21dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/new_my_mima" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:layout_marginLeft="18dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/new_more"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="21dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/new_my_huancun" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="清理缓存"
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:id="@+id/tv_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15M"
                    android:textColor="#999"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/new_more"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_clear_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="21dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/new_chat_ll" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="清理聊天记录"
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:layout_marginLeft="18dp" />


                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/new_more"

                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_manager_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="21dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/new_my_guanli" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="管理模式"
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:id="@+id/tv_manager_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常模式"
                    android:textColor="#999"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/new_more"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="21dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/new_myupdate" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:layout_marginLeft="18dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/new_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="21dp"
                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/new_my_version" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="版本号"
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.0"
                    android:textColor="#999"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/new_more"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="21dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="113dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/new_my_exit" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="退出"
                    android:textColor="#333"
                    android:textSize="17sp"
                    android:layout_marginLeft="18dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/new_more"

                    />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
